<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.watnow.campusdiary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Utils.RealmApplication"
        >
        <activity android:name=".Calendar.CalendarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Map.MapActivity" />
        <activity android:name=".TimeTable.TimeTableActivity" />
        <activity
            android:name=".Reference.ReferenceActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Reference.ReferenceImageActivity"
            android:parentActivityName=".Reference.ReferenceActivity" />
        <activity android:name=".Calendar.CalendarAddScheduleActivity"
            android:parentActivityName=".Calendar.CalendarActivity"/>
    </application>

</manifest>