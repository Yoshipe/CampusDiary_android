<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.watnow.campusdiary">

    <application
        android:allowBackup="true"
        android:name=".utils.RealmApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".calendar.CalendarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".map.MapActivity" />
        <activity android:name=".timetable.TimeTableActivity" />
        <activity
            android:name=".reference.ReferenceActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".reference.ReferenceImageActivity"
            android:parentActivityName="com.watnow.campusdiary.reference.ReferenceActivity"
            tools:targetApi="jelly_bean">
        </activity>
        <activity
            android:name=".calendar.CalendarAddScheduleActivity"
            android:parentActivityName="com.watnow.campusdiary.calendar.CalendarActivity"
            tools:targetApi="jelly_bean">
        </activity>
        <activity android:name=".SchoolYearActivity" />
        <activity android:name=".RegulationActivity" />
    </application>

</manifest>