<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.watnow.campusdiary">

    <application
        android:name=".utils.RealmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".calendar.CalendarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".map.MapActivity" />
        <activity android:name=".time_table.TimeTableActivity" />
        <activity
            android:name=".reference.ReferenceActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".reference.ReferenceImageActivity"
            android:parentActivityName=".reference.ReferenceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".reference.ReferenceActivity"
                />
        </activity>
        <activity
            android:name=".calendar.CalendarAddScheduleActivity"
            android:parentActivityName=".calendar.CalendarActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".calendar.CalendarActivity" />
        </activity>
        <activity android:name=".SchoolYearActivity" />
        <activity android:name=".RegulationActivity"></activity>
    </application>

</manifest>